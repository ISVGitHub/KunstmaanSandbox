{% extends 'KunstmaanKAdminBundle:Default:layout.html.twig' %}

{% block sidebar %}
    {% include 'KunstmaanKAdminBundle:FileGallery:sidebar.html.twig' %}
{% endblock %}

{% block breadcrumb %}
	<ul class="breadcrumb">
		<li><a href="{{ path('KunstmaanKAdminBundle_homepage') }}">Home</a> <span class="divider">/</span></li>
        <li><a href="{{ path('KunstmaanKAdminBundle_media') }}">Media</a> <span class="divider">/</span></li>
        <li><a href="{{ path('KunstmaanKAdminBundle_media_files') }}">Files</a> <span class="divider">/</span></li>
        {% for parent in gallery.parents %}
            <li><a href="{{ path('KunstmaanKAdminBundle_filegallery_show', { 'id': parent.id, 'slug': parent.slug }) }}">{{ parent.name}}</a><span class="divider">/</span></li>
        {% endfor %}
		<li class="active">{{ gallery.name }}</li>
	</ul>
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>File Gallery <small>{{ gallery.name }}
        {% if gallery.parent %}
            | in <a href="{{ path('KunstmaanKAdminBundle_filegallery_show', { 'id': gallery.parent.id, 'slug': gallery.parent.slug }) }}">{{ gallery.parent.name}}</a>
        {% endif %}
        </small></h1>
    </div>
    <div>
        <p><a href="{{ path('KunstmaanKAdminBundle_file_new', { 'gallery_id' : gallery.id }) }}">add file to this gallery</a> | <a href="{{ path('KunstmaanKAdminBundle_filegallery_subnew', { 'id' : gallery.id }) }}">add a file gallery to this gallery</a></p>
    </div>
    <div>
        <ul>
        {% for child in gallery.children %}
            <li>{% include 'KunstmaanKAdminBundle:FileGallery:showgallery.html.twig' %}</li>
        {% endfor %}
        </ul>

        <h2>Files in {{ gallery.name }}</h2>
        <ul class="media-grid">
        {% for image in gallery.files %}
            <li>
                <a href="{{ path('KunstmaanKAdminBundle_file_show',  { 'media_id' : image.id }) }}">
                    {{ image.name }}
                </a>
             </li>
        {% else %}
            <ul><li>No files in this gallery yet.</li></ul>
        {% endfor %}
        </ul>
    </div>
{% endblock %}