{% extends 'KunstmaanAdminBundle:Settings:index.html.twig' %}

{% block breadcrumb %}
	<ul class="breadcrumb">
		<li><a href="{{ path('KunstmaanAdminBundle_homepage') }}">Home</a> <span class="divider">/</span></li>
        <li><a href="{{ path('KunstmaanAdminBundle_settings') }}">Settings</a> <span class="divider">/</span></li>
        <li><a href="{{ path('KunstmaanAdminBundle_settings_groups') }}">Groups</a> <span class="divider">/</span></li>
		<li class="active">{{ 'settings.groups.add' | trans }}</li>
	</ul>
{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>{{ 'settings.groups.add' | trans }}</h1>
    </div>

    <form action="{{ path('KunstmaanAdminBundle_settings_groups_add') }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
    	{{ form_errors(form) }}
        <div class="clearfix">
            <label for="xlInput3">{{ 'settings.groups.name' | trans }}</label>
            <div class="input">
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="clearfix">
            <label for="xlInput3">{{ 'settings.groups.roles' | trans }}</label>
            <div class="input">
                {{ form_widget(form.rolescollection) }}
            </div>
        </div>

        {{ form_rest(form) }}
        <div class="actions">
            <input class="btn primary type" type="submit" value="{{ 'settings.groups.add' | trans }}">
            <input onclick="window.location = '{{ path('KunstmaanAdminBundle_settings_groups') }}'" type="reset" class="btn" value="{{ 'form.cancel' | trans }}" />
        </div>
    </fieldset>
</form>

{% endblock %}
